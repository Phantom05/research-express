{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    // "noEmit": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      // "*": ["node_modules/*", "src/*"],
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"]
}
